<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
xmlns:gauge="clr-namespace:Syncfusion.SfGauge.XForms;assembly=Syncfusion.SfGauge.XForms"
xmlns:border="clr-namespace:Syncfusion.XForms.Border;assembly=Syncfusion.Core.XForms"
xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             xmlns:syncfusion="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:TTP;assembly=TTP"
             mc:Ignorable="d"
             x:Class="TTP.View.MainTomatoTimerPage"
             Shell.NavBarIsVisible="false"
             Title="Timer">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="180" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <AbsoluteLayout Grid.Row="0">
                <border:SfBorder 
                BorderColor="SkyBlue" 
                AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
                    <Image Source="{local:ImageResource TTP.Assets.MainTomatoImage.weather.png}"
                   Aspect="AspectFill" ></Image>
                </border:SfBorder>
                <Image Source="{local:ImageResource TTP.Assets.MainTomatoImage.timer.png}"  
                   AbsoluteLayout.LayoutBounds=".01,.68,.04,.2" AbsoluteLayout.LayoutFlags="All" ></Image>
                <Image Source="{local:ImageResource TTP.Assets.MainTomatoImage.tomato.png}"  
                   AbsoluteLayout.LayoutBounds=".01,.84,.04,.2" AbsoluteLayout.LayoutFlags="All" ></Image>
                <Label x:Name="labelTime"  AbsoluteLayout.LayoutBounds=".5,.32,.3,.48" AbsoluteLayout.LayoutFlags="All" LineBreakMode="WordWrap" 
                   FontAttributes="Bold" TextColor="AliceBlue" FontSize="20"/>
                <Label Text="13小时20分钟" AbsoluteLayout.LayoutBounds=".08,.72,.3,.2" AbsoluteLayout.LayoutFlags="All" FontSize="10" FontAttributes="Bold"/>
                <Label Text="200" AbsoluteLayout.LayoutBounds=".08,.88,.3,.2" AbsoluteLayout.LayoutFlags="All" FontSize="10" FontAttributes="Bold"/>
            </AbsoluteLayout>
            <syncfusion:SfListView x:Name="recordListView"  Grid.Row="1" ItemsSource="{Binding TimeRecordModels}" ItemSize="100">
                <syncfusion:SfListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                        <Grid Padding="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Text="{Binding timeString}" FontAttributes="Bold" TextColor="Black" FontSize="21" />
                                <Label Grid.Row="1" Grid.Column="0" Text="{Binding description}" TextColor="Black" FontSize="15"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </syncfusion:SfListView.ItemTemplate>
            </syncfusion:SfListView>
            
            <Button x:Name="btnAddRecord" 
                    HorizontalOptions="EndAndExpand" 
                    VerticalOptions="End"
                    WidthRequest="60" 
                    HeightRequest="60" 
                    Margin="0,0,10,10" 
                    CornerRadius="50"
                    BackgroundColor="#D1EEEE"
                    Text="+"
                    FontSize="30"
                    Clicked="btnAddRecord_Clicked"
                    Grid.Row="1"/>
        </Grid>            

    </ContentPage.Content>
</ContentPage>